\par\pard\plain \tx0\li346\fi14\sb60\sl264\slmult1\ltrch\loch {\f2\fs24\b1\i0\cf7 Location:}{\f0\fs24\b0\i0\cf5 <$Scr_Cs::1> Sarah's apartment<!$Scr_Cs::1>}
\par\plain {\f2\fs24\b1\i0\cf7 Time: }{\f0\fs24\b0\i0\cf5 <$Scr_Cs::1>6:30 PM on Friday Night following the Sunday softball game.<!$Scr_Cs::1>}
\par\plain {\f2\fs24\b1\i0\cf7 Weather/Environment: }{\f0\fs24\b0\i0\cf5 <$Scr_Cs::1>Rain and Thunderstorms<!$Scr_Cs::1><!$Scr_Ps::4><$Scr_Ps::2>}
