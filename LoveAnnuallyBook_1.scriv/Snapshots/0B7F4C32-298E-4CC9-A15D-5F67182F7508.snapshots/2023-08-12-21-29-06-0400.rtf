\par\pard\plain \tx0\li346\fi14\sb60\sl264\slmult1\ltrch\loch {\f2\fs24\b1\i0\cf7 Main Characters: }{\f0\fs24\b0\i0\cf5 <$Scr_Cs::1>Sarah<!$Scr_Cs::1>}
